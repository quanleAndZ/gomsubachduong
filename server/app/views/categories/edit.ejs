<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../layout/head', { title: 'Chỉnh sửa danh mục'}) %>
  </head>
  <body class="c-app">
     <%- include('../layout/side-bar') %>
      <%# Header %>
      <%- include('../layout/header') %>
        <main class="c-main">
          <div class="container-fluid">
            <div class="fade-in">
                <div class="row">
                    <div class="col-12">
                        <h4><span>Chỉnh sửa danh mục</span></h4>
                    </div>
                    <div class="col-md-6 col-12">
                        <form action="" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="name"><strong>Tên danh mục</strong> <span  class="text-danger">*</span></label>
                                <input required class="form-control" value="<%= category.name %>" id="name" name="name" type="text" placeholder="Nhập tên danh mục">
                            </div>
                            <div class="form-group">
                                <label for="name"><strong>Danh mục cha</strong></label>
                                <select class="form-control" id="parent_id" name="parent_id">
                                    <option value="">Trống</option>
                                    <% for (const cate of categories) { %>
                                        <% if (!cate.hidden){ %>
                                        <option <%= String(cate._id) === String(category.parent) ? 'selected' : ''%> value="<%= cate._id %>"><%= cate.name %></option>
                                        <% } %>
                                    <% } %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="company"><strong>Mô tả</strong></label>
                                <textarea class="form-control" id="description" name="description" rows="4"><%= category.description %></textarea>
                            </div>
                             <div class="form-group">
                                <label for="company"><strong>Ảnh nền</strong></label>
                                <input type="file" name="background" />
                            </div>
                            <div class="form-group">
                                <label for="company"><strong>Icon</strong></label>
                                <input type="file" name="icon" />
                            </div>
                            <div class="form-group">
                                <label for="company"><strong>Banner</strong></label>
                                <input type="file" name="banner" />
                            </div>
                            <div class="text-center">
                                <button class="btn btn-info" type="submit" value="save" name="submit"> 
                                    Lưu
                                </button>
                                <button class="btn btn-success" name="submit" value="apply" type="submit">
                                    Lưu và Sửa 
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
          </div>
        </main>
      <%# Footer %>
    <%- include('../layout/foot') %>

  </body>
</html>