<script>
    const noti = JSON.parse('<%- JSON.stringify(flash) %>');
    if (noti.error) {
        PNotify.error({
            title: 'Lỗi',
            text: noti.error,
        });
    }
    if (noti.success) {
        PNotify.success({
            title: 'Thành công',
            text: noti.success,
        });
    }

</script>